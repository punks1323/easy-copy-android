<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".screen.home.HomeActivity">

    <data>

        <variable
            name="viewModel"
            type="com.easycopy.screen.home.HomeViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@={viewModel.selectedDir}"
            android:textColor="#000000"
            android:textSize="33sp" />

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cornerRadius="30dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:text="AAA"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="@{!viewModel.state.equals(viewModel.CONNECTED)}"
            android:onClick="@{()->viewModel.choseRootDir()}"
            android:text="Choose Root" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@={viewModel.state}"
            android:textColor="#000000"
            android:textSize="33sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="@{!viewModel.state.equals(viewModel.CONNECTED)}"
                android:onClick="@{()->viewModel.connect()}"
                android:text="Connect" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="@{viewModel.state.equals(viewModel.CONNECTED)}"
                android:onClick="@{()->viewModel.openFile()}"
                android:text="Select File" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="@{viewModel.state.equals(viewModel.CONNECTED)}"
                android:onClick="@{()->viewModel.disconnect()}"
                android:text="Disconnect" />
        </LinearLayout>

    </LinearLayout>

</layout>